extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-12 
        +box-head("Chat")

    .row 
      .col-12
        .chat
          .inner-body
            each chat in chats
              div(class=(chat.user_id == user.id ? "inner-outgoing" : "inner-incoming"))
                if (chat.user_id != user.id)
                  .inner-name #{chat.infoUser.fullName}
                .inner-content
                  | #{chat.content}
            //- .inner-outgoing
            //-   .inner-content
            //-     | Thế à?
            //- .inner-incoming
            //-   .inner-name Em yêu
            //-   .inner-content
            //-     | Nhanh nha
            //- .inner-outgoing
            //-   .inner-content
            //-     | Có ai ở nhà đâu?
            //- .inner-incoming
            //-   .inner-name Em yêu
            //-   .inner-content
            //-     | Thì e bảo ko ai ở nhà mà :))
          .inner-foot
            form(
              class="inner-form"
              action=""
            )
              input(type="text" placeholder="Nhập nội dung ..." name="content")
              button
                i(class="fa-solid fa-paper-plane")